<?xml version="1.0" encoding="UTF-8"?>
<project name="mangadownloader" default="all">
  
  
  <property file="mangadownloader.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.klib"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.12" value="${jdk.home.12}/bin"/>
  <path id="jdk.classpath.12">
    <fileset dir="${jdk.home.12}">
      <include name="../java-12-openjdk!/java.base"/>
      <include name="../java-12-openjdk!/java.compiler"/>
      <include name="../java-12-openjdk!/java.datatransfer"/>
      <include name="../java-12-openjdk!/java.desktop"/>
      <include name="../java-12-openjdk!/java.instrument"/>
      <include name="../java-12-openjdk!/java.logging"/>
      <include name="../java-12-openjdk!/java.management"/>
      <include name="../java-12-openjdk!/java.management.rmi"/>
      <include name="../java-12-openjdk!/java.naming"/>
      <include name="../java-12-openjdk!/java.net.http"/>
      <include name="../java-12-openjdk!/java.prefs"/>
      <include name="../java-12-openjdk!/java.rmi"/>
      <include name="../java-12-openjdk!/java.scripting"/>
      <include name="../java-12-openjdk!/java.se"/>
      <include name="../java-12-openjdk!/java.security.jgss"/>
      <include name="../java-12-openjdk!/java.security.sasl"/>
      <include name="../java-12-openjdk!/java.smartcardio"/>
      <include name="../java-12-openjdk!/java.sql"/>
      <include name="../java-12-openjdk!/java.sql.rowset"/>
      <include name="../java-12-openjdk!/java.transaction.xa"/>
      <include name="../java-12-openjdk!/java.xml"/>
      <include name="../java-12-openjdk!/java.xml.crypto"/>
      <include name="../java-12-openjdk!/jdk.accessibility"/>
      <include name="../java-12-openjdk!/jdk.aot"/>
      <include name="../java-12-openjdk!/jdk.attach"/>
      <include name="../java-12-openjdk!/jdk.charsets"/>
      <include name="../java-12-openjdk!/jdk.compiler"/>
      <include name="../java-12-openjdk!/jdk.crypto.cryptoki"/>
      <include name="../java-12-openjdk!/jdk.crypto.ec"/>
      <include name="../java-12-openjdk!/jdk.dynalink"/>
      <include name="../java-12-openjdk!/jdk.editpad"/>
      <include name="../java-12-openjdk!/jdk.hotspot.agent"/>
      <include name="../java-12-openjdk!/jdk.httpserver"/>
      <include name="../java-12-openjdk!/jdk.internal.ed"/>
      <include name="../java-12-openjdk!/jdk.internal.jvmstat"/>
      <include name="../java-12-openjdk!/jdk.internal.le"/>
      <include name="../java-12-openjdk!/jdk.internal.opt"/>
      <include name="../java-12-openjdk!/jdk.internal.vm.ci"/>
      <include name="../java-12-openjdk!/jdk.internal.vm.compiler"/>
      <include name="../java-12-openjdk!/jdk.internal.vm.compiler.management"/>
      <include name="../java-12-openjdk!/jdk.jartool"/>
      <include name="../java-12-openjdk!/jdk.javadoc"/>
      <include name="../java-12-openjdk!/jdk.jcmd"/>
      <include name="../java-12-openjdk!/jdk.jconsole"/>
      <include name="../java-12-openjdk!/jdk.jdeps"/>
      <include name="../java-12-openjdk!/jdk.jdi"/>
      <include name="../java-12-openjdk!/jdk.jdwp.agent"/>
      <include name="../java-12-openjdk!/jdk.jfr"/>
      <include name="../java-12-openjdk!/jdk.jlink"/>
      <include name="../java-12-openjdk!/jdk.jshell"/>
      <include name="../java-12-openjdk!/jdk.jsobject"/>
      <include name="../java-12-openjdk!/jdk.jstatd"/>
      <include name="../java-12-openjdk!/jdk.localedata"/>
      <include name="../java-12-openjdk!/jdk.management"/>
      <include name="../java-12-openjdk!/jdk.management.agent"/>
      <include name="../java-12-openjdk!/jdk.management.jfr"/>
      <include name="../java-12-openjdk!/jdk.naming.dns"/>
      <include name="../java-12-openjdk!/jdk.naming.rmi"/>
      <include name="../java-12-openjdk!/jdk.net"/>
      <include name="../java-12-openjdk!/jdk.pack"/>
      <include name="../java-12-openjdk!/jdk.rmic"/>
      <include name="../java-12-openjdk!/jdk.scripting.nashorn"/>
      <include name="../java-12-openjdk!/jdk.scripting.nashorn.shell"/>
      <include name="../java-12-openjdk!/jdk.sctp"/>
      <include name="../java-12-openjdk!/jdk.security.auth"/>
      <include name="../java-12-openjdk!/jdk.security.jgss"/>
      <include name="../java-12-openjdk!/jdk.unsupported"/>
      <include name="../java-12-openjdk!/jdk.unsupported.desktop"/>
      <include name="../java-12-openjdk!/jdk.xml.dom"/>
      <include name="../java-12-openjdk!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.12}"/>
  <property name="project.jdk.bin" value="${jdk.bin.12}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.12"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.jsoup-1.12.1.classpath">
    <pathelement location="${basedir}/../jsoup-1.12.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module mangaDownloader -->
  
  <dirname property="module.mangadownloader.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mangadownloader" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mangadownloader" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mangadownloader" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mangadownloader" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="mangadownloader.output.dir" value="${module.mangadownloader.basedir}/out/production/mangaDownloader"/>
  <property name="mangadownloader.testoutput.dir" value="${module.mangadownloader.basedir}/out/test/mangaDownloader"/>
  
  <path id="mangadownloader.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mangadownloader.module.production.classpath">
    <path refid="${module.jdk.classpath.mangadownloader}"/>
    <path refid="library.jsoup-1.12.1.classpath"/>
  </path>
  
  <path id="mangadownloader.runtime.production.module.classpath">
    <pathelement location="${mangadownloader.output.dir}"/>
    <path refid="library.jsoup-1.12.1.classpath"/>
  </path>
  
  <path id="mangadownloader.module.classpath">
    <path refid="${module.jdk.classpath.mangadownloader}"/>
    <pathelement location="${mangadownloader.output.dir}"/>
    <path refid="library.jsoup-1.12.1.classpath"/>
  </path>
  
  <path id="mangadownloader.runtime.module.classpath">
    <pathelement location="${mangadownloader.testoutput.dir}"/>
    <pathelement location="${mangadownloader.output.dir}"/>
    <path refid="library.jsoup-1.12.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mangadownloader">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mangadownloader">
    <patternset refid="excluded.from.module.mangadownloader"/>
  </patternset>
  
  <path id="mangadownloader.module.sourcepath">
    <dirset dir="${module.mangadownloader.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mangadownloader" depends="compile.module.mangadownloader.production,compile.module.mangadownloader.tests" description="Compile module mangaDownloader"/>
  
  <target name="compile.module.mangadownloader.production" depends="register.custom.compilers" description="Compile module mangaDownloader; production classes">
    <mkdir dir="${mangadownloader.output.dir}"/>
    <javac2 destdir="${mangadownloader.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mangadownloader}/javac">
      <compilerarg line="${compiler.args.mangadownloader}"/>
      <bootclasspath refid="mangadownloader.module.bootclasspath"/>
      <classpath refid="mangadownloader.module.production.classpath"/>
      <src refid="mangadownloader.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mangadownloader"/>
    </javac2>
    
    <copy todir="${mangadownloader.output.dir}">
      <fileset dir="${module.mangadownloader.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mangadownloader.tests" depends="register.custom.compilers,compile.module.mangadownloader.production" description="compile module mangaDownloader; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mangadownloader" description="cleanup module">
    <delete dir="${mangadownloader.output.dir}"/>
    <delete dir="${mangadownloader.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mangadownloader" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mangadownloader" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>